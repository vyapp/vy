# Used to insert tab, spaces.
from vyapp.plugins import spacing
spacing.Tab.SCHEME = {
'.rb': (2, ' '),
'.c' : (4, ' '),
'.cpp' : (4, ' '),
'.java' : (4, ' '),
'.go':(4, ' '),
'.py': (4, ' ')}

spacing.Tab.DEFAULT_SIZE = 4
spacing.Tab.DEFAULT_CHAR = ' '
autoload(spacing)


